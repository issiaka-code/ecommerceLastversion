{% extends 'adminBase.html.twig' %}

{% block title %}Edit Categorie{% endblock %}

{% block body %}
    <div class="row" >
        <div class="col-4">
            <h4>Edit Categorie</h4>

            {{ include('categorie/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="col-md-8" >
            <h4>Categorie index</h4>

            <table class="table styled-table ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.nom }}</td>
                        <td class="d-flex flex-row" >
                            {{ include('categorie/_delete_form.html.twig') }}
                            <a class="btn btn-info btn-sm ms-2 " href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><i class="fas fa-pen" ></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
