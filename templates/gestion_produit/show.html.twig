{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Ficher</th>
                <td>{{ produit.ficher }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Isvedette</th>
                <td>{{ produit.isvedette ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>New</th>
                <td>{{ produit.new ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gestion_produit_index') }}">back to list</a>

    <a href="{{ path('app_gestion_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('gestion_produit/_delete_form.html.twig') }}
{% endblock %}
