{% extends 'base.html.twig' %}

{% block title %}panier{% endblock %}

{% block body %}
<main>

    <!-- breadcrumb-area-start -->
    <div class="breadcrumb__area pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="tp-breadcrumb__content">
                        <div class="tp-breadcrumb__list">
                            <span class="tp-breadcrumb__active"><a href="{{ path('app_home')}}">Home</a></span>
                            <span class="dvdr">/</span>
                            <span>Cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area-end -->

    <!-- cart area -->
    <section class="cart-area pb-80">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="{{ path('app_acheter')}}" method="post" >
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th class="product-thumbnail">Image</th>
                                    <th class="cart-product-name">Nom</th>
                                    <th class="product-price">Prix</th>
                                    <th class="product-quantity">Quantité</th>
                                    <th class="product-subtotal">Total</th>
                                </tr>
                                </thead>
                                <tbody id="panier-tableau">

                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="coupon-all">

                                    <div class="coupon2">
                                        <button type="button" class="btn btn-danger" id="vider-panier" >
                                            Vider panier
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-md-5 ">
                                <div class="cart-page-total">
                                    <h2>Cart totals</h2>
                                    <ul class="mb-20">
                                        <li>Prix totale : <span class="total-montant" ></span></li>
                                        <li>TVA 20.00%  : <span>3.58 €</span></li>
                                        <li>Total à payer  : <span class="totale-a-payer" ></span></li>
                                    </ul>

                                </div>

                                    <input type="hidden" name="panier" id="panier">
                                    <button type="submit" class="btn btn-primary" id="acheter" >
                                        Acheter maintenant
                                    </button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- cart area end-->

    {% include 'plusInfo.html.twig' %}

</main>

{% endblock %}

{%block js %}
    <script src="{{asset('afficherPanier.js')}}"></script>
{%endblock%}
